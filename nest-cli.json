{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/facade-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/facade-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/facade-service",
  "projects": {
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "facade-service": {
      "type": "application",
      "root": "apps/facade-service",
      "entryFile": "main",
      "sourceRoot": "apps/facade-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/facade-service/tsconfig.app.json"
      }
    },
    "messages-service": {
      "type": "application",
      "root": "apps/messages-service",
      "entryFile": "main",
      "sourceRoot": "apps/messages-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/messages-service/tsconfig.app.json"
      }
    },
    "logging-service": {
      "type": "application",
      "root": "apps/logging-service",
      "entryFile": "main",
      "sourceRoot": "apps/logging-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging-service/tsconfig.app.json"
      }
    }
  }
}